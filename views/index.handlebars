{{#each articles}}

<div class="row">
    <div class="col s12">
      <div class="card darken-1">
        <div class="card-content">
          <a href="{{this.link}}">
          <span class="card-title">{{this.title}}</span>
          </a>
          <p>{{this.summary}}</p>
        </div>
        <div class="card-action">
          <a href="{{this.link}}" target="_blank"><button class="btn article-link">View Article on Kotaku</button></a>
          <button class="btn waves-effect waves-light comment-view modal-trigger" data-target="comments-modal" data-id="{{this._id}}">View Comments ({{this.comment.length}}) </a>
          <button class="btn waves-effect waves-light comment-post modal-trigger" data-target="submit-comment-modal" data-id="{{this._id}}">Leave a Comment</a>
        </div>
      </div>
    </div>
</div>

{{/each}}